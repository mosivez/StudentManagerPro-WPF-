<Window x:Class="StudentManagerWPF.Views.StudentInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentManagerWPF.Views"
        mc:Ignorable="d" Icon="/StudentManagerWPF;component/Images/Ico/about.ico"
        Title="当前学员信息详情" Height="400" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Background="#FFF0F0F0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="41*"/>
            <ColumnDefinition Width="82*"/>
            <ColumnDefinition Width="41*"/>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="138*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="16*"/>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="16*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1" Grid.Row="1" Text="学生姓名：" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Grid.Column="3" Grid.Row="1" Text="性别：" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Grid.Column="1" Grid.Row="3" Text="出生日期：" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Grid.Column="3" Grid.Row="3" Text="班级：" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Grid.Column="1" Grid.Row="5" Text="身份证号：" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Grid.Column="1" Grid.Row="7" Text="考勤卡号：" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Grid.Column="1" Grid.Row="9" Text="联系电话：" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <TextBlock Grid.Column="1" Grid.Row="11" Text="家庭住址：" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Label Name="lblStudentName" Grid.Column="2" Grid.Row="1" FontSize="16" Background="#FFF0F0F0" BorderBrush="#FF343434" BorderThickness="0.4"/>
        <Label Name="lblGender" Grid.Column="4" Grid.Row="1" FontSize="16" Background="#FFF0F0F0" BorderBrush="#FF343434" BorderThickness="0.4"/>
        <Label Name="lblBirthday" Grid.Column="2" Grid.Row="3" FontSize="16" Background="#FFF0F0F0" BorderBrush="#FF343434" BorderThickness="0.4"/>
        <Label Name="lblClass" Grid.Column="4" Grid.Row="3" FontSize="16" Background="#FFF0F0F0" BorderBrush="#FF343434" BorderThickness="0.4"/>
        <Label Name="lblStudentIdNo" Grid.Column="2" Grid.Row="5" FontSize="16" Background="#FFF0F0F0" BorderBrush="#FF343434" BorderThickness="0.4" Grid.ColumnSpan="3"/>
        <Label Name="lblCardNo" Grid.Column="2" Grid.Row="7" FontSize="16" Background="#FFF0F0F0" BorderBrush="#FF343434" BorderThickness="0.4" Grid.ColumnSpan="3"/>
        <Label Name="lblPhoneNumber" Grid.Column="2" Grid.Row="9" FontSize="16" Background="#FFF0F0F0" BorderBrush="#FF343434" BorderThickness="0.4" Grid.ColumnSpan="3"/>
        <Label Name="lblAddress" Grid.Column="2" Grid.Row="11" FontSize="16" Background="#FFF0F0F0" BorderBrush="#FF343434" BorderThickness="0.4" Grid.ColumnSpan="3"/>
        <Image Name="pbStu" Margin="0,0,0,5" Grid.RowSpan="10" Grid.Column="6" Grid.Row="1"/>
        <Button Name="btnClose" Margin="86,0,0,10" Grid.RowSpan="2" Grid.Column="6" Grid.Row="11" Click="btnClose_Click" Content="关闭窗口" FontSize="16"/>
    </Grid>
</Window>
